<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

  <ui:style>
    .mainPanel {
      height: 100%;
    }
    .noCanvasPanel {
      padding: 5px;
    }
    .palette {
      float: left;
      padding: 5px;
    }
    .emptyText {
      margin: 20px;
      font-style: italic;
    }
  </ui:style>

  <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">
    
    <g:FlowPanel ui:field="noCanvasPanel" addStyleNames="{style.noCanvasPanel}">
      <!--<g:HTML text="No canvas currently in use" addStyleNames="{style.emptyText}"/>-->
    </g:FlowPanel>

    <g:FlowPanel ui:field="paletteContainer" styleName="{style.palette}">
      <g:SimplePanel ui:field="palettePanel"/>
    </g:FlowPanel>
    
  </g:FlowPanel>

</ui:UiBinder>