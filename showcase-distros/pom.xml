<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>kie-wb-common-stunner-showcase</artifactId>
        <groupId>org.kie.workbench.stunner</groupId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>kie-wb-common-stunner-showcase-distros</artifactId>
    <name>Kie Workbench - Common - Stunner - Showcase Distributions</name>
    <description>This module builds the WAR artifact distributions for different application servers.</description>
    <packaging>pom</packaging>

    <properties>
        <org.kie.workbench.stunner.showcase.distro.artifactId>kie-wb-common-stunner-showcase-guvnor</org.kie.workbench.stunner.showcase.distro.artifactId>
    </properties>

    <build>
        <plugins>
            <!-- disable enforcer -->
            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>no-managed-deps</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>stunner-${project.version}</finalName>
                    <descriptors>
                        <descriptor>src/main/assembly/assembly-wildfly.xml</descriptor>
                    </descriptors>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.kie.workbench.stunner</groupId>
            <artifactId>${org.kie.workbench.stunner.showcase.distro.artifactId}</artifactId>
            <type>war</type>
        </dependency>

    </dependencies>

</project>